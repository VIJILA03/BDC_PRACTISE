@page
@model WebApplication1.Pages.createstdModel
@{
    ViewData["title"] = "ADD STUDENT";
}

<br />
<hr /><h1>NEW STUDENT</h1>
@if(Model.ErrorMsg.Length>0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.ErrorMsg</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}
<form method="post">
    
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Student Name</label>
        
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Name" value="@Model.crtstd.Name">
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Marks</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Marks" value="@Model.crtstd.Marks">
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Course Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="CourseName" value="@Model.crtstd.CourseName">
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">SUBMIT</button>
        </div>
    </div>
     @if(Model.SucceedMsg.Length>0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.SucceedMsg</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}
</form>