@page
@model lms.Pages.editbookModel
@{
    ViewData["title"] = "EDIT BOOK";
}
<h1>EDIT BOOK</h1>
@if(Model.errorMsg.Length>0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>
            @Model.errorMsg
        </strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
<form method="post">
    <input type="hidden" name="bid" value="@Model.eb.id">
   <!-- <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label">BOOK ID</label>
      <div class="col-sm-6"> 
          <input type="text" class="form-control" name="Id" value="@Model.eb.id">
    </div>
    </div>-->
    <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label">BOOK NAME</label>
      <div class="col-sm-6"> 
          <input type="text" class="form-control" name="Name" value="@Model.eb.name">
    </div>
    </div>
    <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label">AUTHOR</label>
      <div class="col-sm-6"> 
          <input type="text" class="form-control" name="Author" value="@Model.eb.author">
    </div>
    </div>
    <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label text-dark">PUBLICATION</label>
      <div class="col-sm-6"> 
          <input type="text" class="form-control" name="Publication" value="@Model.eb.publication">
    </div>
    </div>
       <div class="row mb-3"> 
        <label class="col-sm-3 col-form-label text-dark">TOTAL COPIES</label>
      <div class="col-sm-6"> 
          <input type="text" class="form-control" name="Copies" value="@Model.eb.copies">
    </div>
    </div>
    
        
    @if(Model.successMsg.Length>0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>
            @Model.successMsg
        </strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

    <div class="row mb-3"> 
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">SAVE</button>
        </div>
        </div>
</form>
 <div class="row mb-3"> 
        <div class="offset-sm-3 col-sm-3 d-grid">
              <a class=" btn btn-primary"  href="/admin">Go Back</a>
   
        </div>
     </div>
