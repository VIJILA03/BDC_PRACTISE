@page
@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Mvc.RazorPages;
@using System.Data.SqlClient;

@model sampledb.Pages.checkbookModel

<br />
<hr /><h1>Booking DETAILS</h1>
@if(Model.ErrorMsg.Length>0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.ErrorMsg</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}
<form method="post">
    <input type="hidden" name="id" value="@Model.chkbk.id">
     
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Book Name</label>
        <div class="col-sm-6">
           <p>@Model.chkbk.name</p>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Book COUNT</label>
        <div class="col-sm-6">
           <p>@Model.chkbk.availability</p>
        </div>
    </div>
    @if(@Model.chkbk.availability==0){
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-danger">BOOKING NOT ALLOWED</button>
        </div>
        </div>
    }
    else
    {
      <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Book</button>
        </div>
        </div>  
    }
    @if(Model.SucceedMsg.Length>0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.SucceedMsg</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}
</form>

            
        
        
  
        
