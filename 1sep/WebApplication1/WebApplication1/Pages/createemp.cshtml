@page
@model WebApplication1.Pages.createempModel
@{
    ViewData["title"] = "ADD EMPLOYEE";
}
<br />
<hr /><h1>NEW EMPLOYEE DETAILS</h1>
@if(Model.ErrorMsg.Length>0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.ErrorMsg</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}
<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">EMPLOYEE ID</label>
        
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Id" value="@Model.addemp.id">
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">EMPLOYEE NAME</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Name" value="@Model.addemp.name">
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">DESIGNATION</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Designation" value="@Model.addemp.designation">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">DATE OF BIRTH</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="Dob" value="@Model.addemp.dob">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">DATE OF JOINING</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="Doj" value="@Model.addemp.doj">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">BASE LOCATION</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="BaseLocation" value="@Model.addemp.loc">
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">ADD</button>
        </div>
    </div>
 @if(Model.SucceedMsg.Length>0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.SucceedMsg</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}
</form>